<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        
        <!-- Card styling -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/primary_light</item>
        
        <!-- Divider -->
        <item name="android:divider">@color/divider_dark</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <style name="Theme.ProjectAndroid" parent="Base.Theme.ProjectAndroid" />
    
    <!-- Custom styles for components -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="AppButton.Secondary" parent="AppButton">
        <item name="backgroundTint">@color/secondary</item>
    </style>
    
    <style name="AppEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="boxBackgroundColor">@color/surface_dark</item>
    </style>
    
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/divider_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>
    

</resources>